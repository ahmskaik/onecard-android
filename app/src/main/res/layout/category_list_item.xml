<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/category_card"
        android:layout_margin="@dimen/margin_small"
        android:layout_width="@dimen/category_item_reso"
        android:layout_height="@dimen/category_item_reso"
        app:cardCornerRadius="@dimen/category_item_radius"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="@color/grayColor"
        app:cardElevation="15dp">
        <ImageView
            android:id="@+id/category_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_vsmall"
            android:layout_margin="@dimen/margin_small"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_category"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/category_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>
</LinearLayout>