<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout android:id="@+id/appBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bar_background"
            android:layout_marginLeft="@dimen/margin_vlarge"
            android:layout_marginRight="@dimen/margin_vlarge"
            android:padding="@dimen/margin_vsmall"
            android:layout_centerInParent="true"
            android:elevation="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_small"
                android:src="@drawable/ic_search"/>
            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:singleLine="true"
                android:imeOptions="actionSearch" />

        </LinearLayout>

        <include
            android:id="@+id/companies_back_button"
            layout="@layout/back_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

</com.google.android.material.appbar.AppBarLayout>